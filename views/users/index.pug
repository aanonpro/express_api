                            //- button.btn.btn-danger(type='submit') Delete
      
    //- .datatable-footer
        #DataTables_Table_0_paginate.dataTables_paginate.paging_simple_numbers
        -var i = 1;  
            nav(aria-label='Page navigation example')
                ul.pagination
                    li.page-item
                        a.page-link(href='#') Page:
                            span= Page
                            
                    li.page-item
                        a.page-link(href='/students/?page='+(i-1+i)  aria-label='Previous')
                            span(aria-hidden='true') &laquo;
                            span.sr-only Previous
                    li.page-item
                        a.page-link(href='/students/?page='+(+page+i)  aria-label='Next')
                            span(aria-hidden='true') &raquo;
                            span.sr-only Next


